import React, { useRef } from 'react';
import ChatInterface, { ChatInterfaceHandle } from '../components/ChatInterface.tsx';

const ChatPage: React.FC = () => {
  const chatRef = useRef<ChatInterfaceHandle>(null);

  const handleQueryClick = (query: string) => {
    if (chatRef.current) {
      chatRef.current.sendMessage(query);
    }
  };

  return (
    <div className="flex-grow bg-[#fafafa] flex flex-col min-h-[calc(100vh-73px)] animate-in fade-in duration-500">
      <div className="max-w-7xl mx-auto w-full px-6 py-8 flex-grow flex flex-col lg:flex-row gap-8">
        
        {/* Sidebar */}
        <div className="lg:w-1/4 space-y-6">
          <div className="p-8 bg-[#0d47a1] rounded-[32px] text-white shadow-xl">
            <h2 className="text-sm font-black tracking-widest uppercase mb-4 opacity-70">Portal Scout</h2>
            <h3 className="text-3xl font-black tracking-tighter uppercase mb-4 leading-none">Intelligence</h3>
            <p className="text-blue-100 text-sm font-medium leading-relaxed">
              Real-time Arizona trail alerts and SageSuite technical support.
            </p>
          </div>
          
          <div className="p-6 bg-white border border-gray-100 rounded-[32px] shadow-sm">
             <h4 className="text-[10px] font-black uppercase tracking-widest text-gray-400 mb-6">Quick Queries</h4>
             <ul className="space-y-4">
               {[
                 "How do I setup my Sage subdomain?",
                 "Find Sedona recovery retreats",
                 "Are there hidden trail pools nearby?",
                 "Explain the GHL Community sync"
               ].map((q, i) => (
                 <li 
                   key={i} 
                   onClick={() => handleQueryClick(q)}
                   className="text-[13px] font-bold text-gray-600 hover:text-[#0d47a1] cursor-pointer transition-colors"
                 >
                   {q}
                 </li>
               ))}
             </ul>
          </div>
        </div>

        {/* Main Interface */}
        <div className="lg:w-3/4 flex-grow flex flex-col bg-white border border-gray-100 rounded-[32px] overflow-hidden shadow-2xl shadow-blue-900/5">
           <ChatInterface 
             ref={chatRef}
             className="h-full" 
             initialMessage="Scout Portal Active. How can I help your journey?" 
           />
        </div>
      </div>
    </div>
  );
};

export default ChatPage;
  );
};

export default ChatPage;
